<div class = "side-header">
  <div>
    <%= link_to current_user.name, edit_user_path(current_user), class: "user-name" %>
  </div>
  <div class = "new-room">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>
<div class = "side-rooms">
  <% current_user.rooms.each do |room| %>
  <div class = "side-room">
    <div class = "room-name">
      <%= link_to room.name, room_messages_path(room) %>
    </div>
  </div>
  <% end %>
</div>
